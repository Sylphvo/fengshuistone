@using Outsourcing.Core.Common
@model IEnumerable<Outsourcing.Data.Models.Blog>
@{
    /**/

    HttpCookie cookie = Request.Cookies["_culture"];
}
<style>
    .widget-blog {
        list-style: none;
        display: inline;
        width: 250px;
        height: 150px;
        position: center;
    }

    .thumbnail {
        width: 200px;
        height: 150px;
        background-position: center center;
        background-size: cover;
    }
</style>
@if (Model != null)
{
    foreach (var item in Model)
    {
        if (cookie.Value == "vi" || cookie.Value == "")
        {
            <li class="widget-blog">
                <div class="thumbnail">
                    <a href="/newDetail/@item.Slug"><img style="width:120px;height:150px" src="@item.BlogImage_Default" alt="@item.Title"></a>
                </div>
                <div class="content">
                    <h3 style="font-size: 15px" class="title"><a href="/newDetail/@item.Slug">@Html.Raw(slitString.TruncateAtWord(item.Title, 80))</a></h3>
                    <span style="font-size: 10px" class="date">@item.DateCreated</span>
                </div>
            </li>
        }
        else
        {

            <li class="widget-blog">
                <div class="thumbnail">
                    <a href="/newDetail/@item.Slug"><img style="width:120px;height:150px" src="@item.BlogImage_Default" alt="@item.TitleEng" name=""></a>
                </div>
                <div class="content">
                    <h3 style="font-size: 15px" class="title"><a href="/newDetail/@item.Slug">@Html.Raw(slitString.TruncateAtWord(item.TitleEng, 80))</a></h3>
                    <span style="font-size: 10px" class="date">@item.DateCreated</span>
                </div>
            </li>

        }

    }
}

