@model Labixa.Models.LoginViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAuthor.cshtml";
}
<div id="de-sidebar" class="col-lg-3 col-md-12">

    <!-- header begin -->
    <header class="side-header">

        <!-- small button begin -->
        <span id="menu-btn"></span>
        <!-- small button close -->
        <!-- logo begin -->
        <div id="logo">
            <a href="index.html">
                <img class="logo" src="~/Content/stone/images/logo-2.png" alt="">
                <img class="logo-2" src="~/Content/stone/images/logo-border.png" alt="">
            </a>
        </div>
        <!-- logo close -->
        <!-- mainmenu begin -->
        <form method="post" action="/TaiKhoan/Login">
            <div class="modal-body">
                <div> <h4>Tài Khoản</h4></div>
                <div>
                    <input type='text' name='username' id='username' class="form-control" required placeholder="Tài Khoản**">
                </div><br />
                <div> <h4>Mật Khẩu</h4></div>
                <div>
                    <input type='password' name='password' id='password' class="form-control" required placeholder="Mật Khẩu**">
                </div>
            </div>
            <div class="modal-footer">
                <button data-toggle="modal" data-target="#Register" type="button" class="btn btn-primary">Đăng Ký</button>
                <button type="submit" class="btn btn-primary">Đăng Nhập</button>
            </div>
        </form>


        <div class="h-content">
            <div class="social-icons-2">
                <a href="#"><i class="fa fa-facebook fa-lg"></i></a>
                <a href="#"><i class="fa fa-twitter fa-lg"></i></a>
                <a href="#"><i class="fa fa-instagram fa-lg"></i></a>
                <a href="#"><i class="fa fa-google-plus fa-lg"></i></a>
                <a href="#"><i class="fa fa-rss fa-lg"></i></a>
            </div>
        </div>


    </header>
    <!-- header close -->


</div>
