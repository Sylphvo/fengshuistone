                                    {
                                        i++;
                                        <tr>
                                            <td class="thumbnail"><a href="product-details.html"><img src="@item.ProductImage"></a></td>
                                            <td class="name"> <a href="product-details.html">@item.ProdNameEngh</a></td>
                                            <td class="price"><span>@item.PriceEng</span></td>
