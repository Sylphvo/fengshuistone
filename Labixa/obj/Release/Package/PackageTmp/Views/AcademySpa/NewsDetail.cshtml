@model  Outsourcing.Data.Models.Blog

<div class="ro-section" style="margin-top: 212px; margin-bottom: 50px;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-xs-12">
                <div class="ro-blog-article ro-style-1">
                    <div class="ro-title"><h2>@Html.Raw(Model.Title)</h2></div>
                    <div class="ro-title"><span style="font-size:15px;">Ngày đăng:&nbsp;<a href="#">@Model.DateCreated</a></span></div>
                    <div class="row">
                        <div class="col-md-12 col-xs-12">
                            <div class="ro-content">
                                <div style="text-align: justify">@Html.Raw(Model.Content)</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>

<style>

    .ro-main {
        background-color: #DECA9E;
    }
</style>
